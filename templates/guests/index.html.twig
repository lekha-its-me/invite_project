{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col"><input type="checkbox" id="select_all"/></th>
                <th scope="col">Имя</th>
                <th scope="col">Фамилия</th>
                <th scope="col">E-mail</th>
            </tr>
            </thead>
            <tbody >
            {% for guest in guests%}
                <tr>
                    <td><input type="checkbox" class="guest" name="guests" value="{{ guest.id }}"></td>
                    <td>{{ guest.firstname }}</td>
                    <td>{{ guest.lastname }}</td>
                    <td>{{ guest.email }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <form>
            <div class="form-group">
                <label for="subject">Тема письма</label>
                <input type="subject" class="form-control" id="subject" aria-describedby="subjectHelp">
            </div>
            <div class="form-group">
                <label for="letterBody">Текст письма</label>
                <textarea class="form-control" id="letterBody" rows="3"></textarea>
            </div>
        </form>

        <button type="button" id="sendInvite" class="btn btn-primary">Отправить приглашение</button>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/guests.js') }}"></script>
{% endblock %}
